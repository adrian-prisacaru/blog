<div class="admin articles">
  <h1>Articles</h1>

  <%= link_to 'New Article', new_admin_article_path, class: "new-article-link" %>

  <table class="table">
    <thead>
      <tr>
        <th>User</th>
        <th>Title</th>
        <th>Content</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @articles.each do |article| %>
        <tr>
          <td><%= article.user.name %></td>
          <td><%= article.title %></td>
          <td><%= truncate(article.content) %></td>
          <td><%= link_to 'Show', admin_article_path(article) %></td>
          <td><%= link_to 'Edit', edit_admin_article_path(article) %></td>
          <td><%= link_to 'Destroy', admin_article_path(article), method: :delete,
           data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
